<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:importantForAccessibility="no"
        android:src="@mipmap/ic_launcher"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Large" />

    <LinearLayout
        android:id="@+id/ll_message_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_image_message_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:adjustViewBounds="true"
            android:importantForAccessibility="no"
            android:maxWidth="300dp"
            android:maxHeight="600dp"
            android:src="@drawable/ic_download_file" />

        <TextView
            android:id="@+id/tv_tap_to_download_docs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/tap_to_download"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_message_docs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_attached_file"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:layout_marginVertical="4dp"
            android:importantForAccessibility="no"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_download_file" />

        <TextView
            android:id="@+id/tv_tap_to_download_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/tap_to_download"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/msg_vg_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="277dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sender_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxWidth="277dp"
            android:maxLines="1"
            tools:text="Тестовое имя пользователя" />

        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="278dp"
            tools:text="Длинный текст. Длинный текст. Длинный текст. Длинный текст. Длинный текст. Длинный текст. Длинный текст. Длинный текст. Длинный текст. Длинный текст. " />

    </LinearLayout>

    <com.example.tinkoff_chat_app.views.ReactionsViewGroup
        android:id="@+id/reactions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</merge>