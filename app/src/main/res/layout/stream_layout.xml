<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/transparent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_stream_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:maxLines="2"
        android:textSize="20sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@id/iv_stream_button"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="#test123123" />

    <ImageView
        android:id="@+id/iv_stream_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:gravity="end"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_drop_down_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:tint="@color/gray_text" />

    <androidx.cardview.widget.CardView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="396dp"
        android:layout_height="2dp"
        app:cardBackgroundColor="@color/divider_color"
        app:cardCornerRadius="16dp"
        android:background="@color/divider_color"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>