<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/transparent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_add_new_stream"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:maxLines="1"
        android:textSize="20sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_add_new_stream"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/create_new_stream" />

    <ImageView
        android:id="@+id/iv_add_new_stream"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:gravity="end"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_add_stream"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:tint="@color/gray_text" />

</androidx.constraintlayout.widget.ConstraintLayout>